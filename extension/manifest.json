{
    "manifest_version": 3,
    "name": "Fake News Detector",
    "version": "1.0",
    "description": "Detect potentially fake news articles and social media posts",
    "permissions": [
      "activeTab",
      "contextMenus",
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "<your-api-domain>/*"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }